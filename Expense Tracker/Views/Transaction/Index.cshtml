@model IEnumerable<Expense_Tracker.Models.Transaction>

@{
    ViewData["Title"] = "Index";
}

<div class="row col-10 bg-opacity-75">
    <h1>Transactions</h1>
    <p>
        <a asp-action="AddOrEdit" class="btn btn-outline-primary float-end">Create New</a>
    </p>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @item.CategoryWithIcon
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-action="AddOrEdit" asp-route-id="@item.TransactionId" class="btn btn-outline-info">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TransactionId" class="btn btn-outline-warning">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TransactionId" class="btn btn-outline-danger ">Delete</a>
                        </td>
                    </tr>
            }
    </tbody>
</table>
