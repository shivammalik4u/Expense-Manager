@model IEnumerable<Expense_Tracker.Models.Category>

<div class="row col-8 bg-opacity-75">
    <h1>Categories</h1>
    <p>
        <a asp-action="AddOrEdit" class="btn btn-outline-primary float-end">Create New</a>
    </p>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                Operations
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.TitleWithIcon
            </td>
            <td>
                @if(item.Type == "Income"){
                    <span class="badge badge-primary bg-primary">@item.Type</span>
                }
                else{
                    <span class="badge badge-primary bg-danger">@item.Type</span>
                }
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.CategoryId" class="btn btn-outline-info">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger ">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



